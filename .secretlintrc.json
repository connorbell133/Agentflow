{
  "$schema": "https://raw.githubusercontent.com/secretlint/secretlint/master/packages/%40secretlint/config-loader/schema.json",
  "rules": [
    {
      "id": "@secretlint/secretlint-rule-preset-recommend"
    }
  ],
  "allowsPatterns": [
    {
      "pattern": "\\.env\\.example$"
    },
    {
      "pattern": "\\.env\\.test\\.example$"
    },
    {
      "pattern": "package-lock\\.json$"
    },
    {
      "pattern": "yarn\\.lock$"
    },
    {
      "pattern": "pnpm-lock\\.yaml$"
    },
    {
      "pattern": "docs/",
      "reason": "Documentation files may contain example keys"
    },
    {
      "pattern": "\\.md$",
      "reason": "Markdown files may contain example keys in documentation"
    },
    {
      "pattern": "test.*\\.(ts|js|tsx|jsx)$",
      "reason": "Test files may contain example keys"
    },
    {
      "pattern": "jest\\.setup\\.js$",
      "reason": "Jest setup file contains test keys"
    },
    {
      "pattern": "config/models/test/",
      "reason": "Test model configs contain placeholder keys"
    }
  ]
}
