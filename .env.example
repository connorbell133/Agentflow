# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Environment
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins for API routes
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
# New redirect props (replaces deprecated afterSignInUrl/afterSignUpUrl)
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/flow
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/flow
NEXT_PUBLIC_CLERK_SIGN_UP_FORCE_REDIRECT_URL=/flow

# Clerk Custom Domain (optional)
# If using a custom Clerk domain, set it here (e.g., clerk.app.agentflow.live)
# Leave empty to use default Clerk domains
CLERK_DOMAIN=

# Clerk Subscription Plans
# Tier 1 plan ID for team collaboration features ($5/month)
CLERK_TIER_1_PLAN_ID=cplan_your_tier_1_plan_id_here

# Sentry Error Tracking (optional)
# Get your DSN from https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=

# Additional Configuration
SKIP_CACHE=true
CRON_SECRET=your_cron_secret_here_min_32_chars